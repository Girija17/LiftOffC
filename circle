#include<stdio.h>
#include<conio.h>
int main()
{
float r,d,circum,area;
clrscr();
printf("Enter radius of circle");
scanf("%f",&r);
d=r*2;
printf("Diameter of circle is %f",d);
circum=2*3.14*r;
printf("\nCircumference of circle is %f",circum);
area=3.14*r*r;
printf("\nArea of circle is %f",area);
return 0;
}
